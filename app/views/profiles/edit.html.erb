<h1>Update all your preferences</h1>

<br>
<br>
<%# simple_form_for preferences? %>
<%# we want to create a new preference for each tag chosen by a new user %>
<%= simple_form_for(@preference) do |f| %>
    <%= f.association :tag, :as => :check_boxes  %>
    <%= f.submit 'Submit Your Preferences!', class: 'btn btn-secondary' %>
<% end %>
