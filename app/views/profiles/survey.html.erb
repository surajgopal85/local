<%# simple_form_for preferences? %>
<%# we want to create a new preference for each tag chosen by a new user %>
<style>
  .outline {
    border: 1px solid;
    border-color: #F8BBD5;
    border-radius: 15px;
    padding: 25px;
  }
</style>
<br>
  <h4 class="text-center">What do you Love to do on Vacation?</h4>
  <br>
<div class="d-flex justify-content-evenly flex-wrap my-2">
  <p>Choose your favorite travel preferences:</p>
</div>
<div class="container my-3">
  <div class="outline">
    <%= simple_form_for(@preference) do |f| %>
    <div class="d-flex justify-content-evenly flex-wrap my-2">
      <%= f.association :tag, :as => :check_boxes  %>
    </div>
        <div class="d-flex justify-content-center">
          <%= f.submit 'Save Your Preferences!', class: 'button' %>
        </div>
    <% end %>
  </div>
</div>
