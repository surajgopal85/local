<style>
  a {
    text-decoration: none;
  }

  .trip-cards {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    margin-top: 10px;
  }
</style>
<div class="d-flex justify-content-evenly my-3">
<h2>Your preferences<%= link_to " ðŸ–Š ", profile_edit_path %></h2>
</div>

  <% if !@user.preferences.nil? %>
    <% @user.preferences.each do |preference| %>
      <p><%= preference.tag.name %></p>
    <% end %>
  <% end %>

<div class="d-flex justify-content-evenly my-3">
  <% if !@user.trips.blank? %>
    <h3>You have planned <%= pluralize @user.trips.size, "trip" %></h3>
  <% else %>
    <h4>You have no trips. Create one below!</h4>
  <% end %>
</div>
<div class="d-flex justify-content-evenly my-3">
  <%= render "trips/new_trip_modal", trip: @trip %>
</div>
<div class="trip-cards">
  <%= render "trips/list", trips: @trips %>
</div>
