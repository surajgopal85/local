          <li class="nav-item dropdown">
          <%# image from cloudinary primed %>
          <%# <%= cl_image_tag("https://res.cloudinary.com/dqxyjgr8m/image/upload/v1669648766/local/new-logo-local_Small_ck67wa.jpg",
