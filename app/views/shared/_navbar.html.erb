      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "All Experiences", experiences_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Profile", profile_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Create Experience", new_experience_path, class: "nav-link" %>
