<div class="container">
<div class="experience-card">
<% link_to, experience_path(experience) %>
    <img src="<%= experience.image_url %>">
    <div class="card-positioning">
      <div class="experience-card-info">
        <h2><%= experience.name %></h2>
        <p><%= experience.description %></p>
      </div>
      <div class="preference-card">
        <% experience.tags[0..2].each do |tag| %>
          <%= render 'shared/preference_tag_card', tag: tag %>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
<div class="container">
  <%= link_to "Delete this Experience", experience_path(experience), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this experience?" } %>
  <%= link_to "Edit this Experience", edit_experience_path(experience) %>
</div>
