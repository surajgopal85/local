<% if @user.name.nil? %>
  <h1 class="text-center">Hello, Rob!</h1>
<% else %>
  <h1 class="text-center">Hello, <%= @user.name %>!</h1>
<% end %>


<h3 class="text-center">Your Experiences:</h3>
<br>
  <% @experiences.each do |experience| %>
    <%= render 'shared/experience_card', experience: experience %>
    <%= render 'shared/edit_delete', experience: experience %>
  <% end %>
