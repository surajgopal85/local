<div class="container">
  <%= simple_form_for(@experience) do |f| %>
    <%= f.input :name %>
    <%= f.input :location %>
    <%= f.input :description %>
    <%= f.input :image_url %>
    <hr>
    <%= f.simple_fields_for :experience_tags do |experience_tag| %>
      <%= render 'experience_tag_fields', f: experience_tag %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'add experience tag', f, :experience_tags %>
    </div>
    <%= f.submit "Update Your Experience!" %>
  <% end %>
</div>
