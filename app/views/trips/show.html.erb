<div class="d-flex justify-content-center">
  <h2>Trip to <%= @trip.city %></h2>
  <br>
</div>
<div class="d-flex justify-content-between align-items-center my-3">
  <p class="mx-2"><strong>from</strong> <%= @trip.start_date.strftime("%A %e %B %Y") %> <br> <strong>to</strong> <%= @trip.end_date.strftime("%A %e %B %Y") %></p>
  <%= render "trips/edit_trip_modal", trip: @trip %>
</div>
<div class="d-flex justify-content-center">
  <button class="button"><%= link_to "See Suggestions", my_experiences_path(@trip) %></button>
</div>
<% if @trip.trip_experiences.size > 0 %>
  <% @trip.trip_experiences.each do |trip_exp| %>
    <div class="d-flex align-items-center justify-content-center my-3">
      <%= render 'experiences/my_experience_card', trip: @trip, experience: trip_exp.experience %>
      <%= link_to trip_experience_path(trip_exp), data: { turbo_method: :delete, turbo_confirm: 'Sure you want to delete that experience from your trip?' } do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
    </div>
  <% end %>
<% end %>

<div class="d-flex justify-content-evenly my-3">

  <button class="button-pimped"><%= link_to "Delete Trip", trip_path(@trip), data: { turbo_method: :delete, turbo_confirm: 'Sure you want to delete that trip?' } %></button>
</div>
